<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv"
        android:layout_width="match_parent"
        android:layout_height="1150px"
        android:background="@drawable/view_adddevice_wificonfig_bg1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35px"
        android:background="@drawable/wifi_shape"
        android:paddingBottom="20px"
        android:paddingLeft="55px"
        android:paddingRight="55px"
        android:paddingTop="20px"
        android:text="确认家庭WiFi"
        android:textColor="@color/white"
        android:textSize="46px"/>

    <LinearLayout
        android:id="@+id/ll_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45px"
        android:layout_marginTop="30px"
        android:background="@drawable/wifi_circle_shape"
        android:gravity="center">

        <ImageView
            android:layout_width="60px"
            android:layout_height="50px"
            android:background="@drawable/guide_devices_back_arrow"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv"
        android:layout_marginLeft="80px"
        android:layout_marginRight="80px"
        android:layout_marginTop="60px"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_wifi_name"
            android:layout_width="match_parent"
            android:layout_height="120px"
            android:background="@drawable/shape_tv_name"
            android:gravity="center_vertical"
            android:paddingLeft="40px"
            android:textSize="46px"/>

        <EditText
            android:id="@+id/et_wifi_pwd"
            android:layout_width="match_parent"
            android:layout_height="120px"
            android:layout_marginTop="30px"
            android:background="@drawable/shape_et_pwd"
            android:gravity="center_vertical"
            android:hint="请输入WiFi密码"
            android:paddingLeft="40px"
            android:textColor="@color/theme_text"
            android:textColorHint="#808080"
            android:textSize="46px"/>


        <Button
            android:background="@drawable/wifi_confirm_shape"
            android:id="@+id/btn_confirm"
            android:layout_width="match_parent"
            android:layout_height="120px"
            android:textSize="46px"
            android:layout_marginTop="50px"
            android:textColor="@color/white"
            android:text="开始配网"/>

    </LinearLayout>

</RelativeLayout>