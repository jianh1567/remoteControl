<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/lLayout_bg"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/shape_scenic_circle"
              android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_success"
        android:layout_width="match_parent"
        android:layout_height="60px"
        android:layout_marginLeft="70px"
        android:layout_marginRight="70px"
        android:layout_marginTop="30px"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="扫描成功啦"
            android:textColor="#282828"
            android:textSize="48px"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="135px"
        android:layout_marginLeft="70px"
        android:layout_marginRight="70px">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="起个名字吧"
            android:textColor="#282828"
            android:textSize="48px"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="#dcdcdc"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="48px"
        android:gravity="center"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_money"
            android:layout_width="690px"
            android:layout_height="120px"
            android:layout_centerInParent="true"
            android:background="@drawable/shape_my_login"
            android:gravity="center"
            android:hint="比如: 卧室的灯"
            android:textColor="#282828"
            android:textColorHint="#b4b4b4"
            android:textSize="42px"/>

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="45px"
        android:background="#dcdcdc"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_neg"
            android:layout_width="wrap_content"
            android:layout_height="120px"
            android:layout_weight="1"
            android:background="@drawable/alertdialog_left_selector"
            android:gravity="center"
            android:textColor="#5fcae8"
            android:textSize="48px"/>

        <ImageView
            android:id="@+id/img_line"
            android:layout_width="1px"
            android:visibility="gone"
            android:layout_height="120px"
            android:background="#dcdcdc"/>

        <Button
            android:id="@+id/btn_pos"
            android:layout_width="wrap_content"
            android:layout_height="120px"
            android:layout_weight="1"
            android:background="@drawable/alertdialog_right_selector"
            android:gravity="center"
            android:textColor="#5fcae8"
            android:textSize="48px"/>

    </LinearLayout>

</LinearLayout>