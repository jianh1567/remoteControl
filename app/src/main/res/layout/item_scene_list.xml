<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="400px"
    xmlns:melove="http://schemas.android.com/apk/res-auto">

    <com.wind.control.view.MLImageView
        android:id="@+id/ml_imageview"
        android:layout_width="match_parent"
        android:layout_height="400px"
        android:layout_marginTop="20px"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        melove:press_alpha="50"
        melove:press_color="#00ff00"
        melove:radius="10px"
        melove:shape_type="rectangle" />

    <TextView
        android:id="@+id/scene_name"
        android:layout_marginTop="50px"
        android:layout_marginLeft="50px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="示例：早起"
        android:textSize="50px"/>

    <TextView
        android:id="@+id/trigger_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/scene_name"
        android:layout_marginTop="10px"
        android:layout_marginLeft="50px"
        android:text="定时触发"
        android:textColor="@color/white"
        android:textSize="40px"/>

    <Button
        android:id="@+id/btn_execute"
        android:layout_width="200px"
        android:layout_height="110px"
        android:layout_marginTop="50px"
        android:layout_alignParentRight="true"
        android:layout_marginRight="50px"
        android:text="编辑场景"
        android:textSize="35px"
        android:textColor="@color/white"
        android:background="@drawable/shape_button"/>

    <Button
        android:id="@+id/btn_delete"
        android:layout_width="200px"
        android:layout_height="110px"
        android:layout_below="@id/btn_execute"
        android:layout_marginTop="50px"
        android:layout_alignParentRight="true"
        android:layout_marginRight="50px"
        android:text="删除场景"
        android:textSize="35px"
        android:textColor="@color/white"
        android:background="@drawable/shape_button"/>
</RelativeLayout>
