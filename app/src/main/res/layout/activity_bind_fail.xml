<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:background="#000000">

        <ImageView
            android:id="@+id/iv_left"
            android:layout_width="150px"
            android:layout_height="150px"
            android:layout_centerVertical="true"
            android:padding="35px"
            android:src="@drawable/ic_left"/>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:paddingLeft="20px"
            android:text="配网失败"
            android:textColor="@color/white"
            android:textSize="52px"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#E1E1E1"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="270px"
        android:background="#00C7B2"
        android:paddingLeft="30px"
        android:paddingRight="30px">

        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60px"
            android:text="与德万物工程红外设备"
            android:textColor="@color/white"
            android:textSize="56px"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv1"
            android:layout_marginTop="15px"
            android:text="添加失败!"
            android:textColor="@color/white"
            android:textSize="56px"/>

        <ImageView
            android:id="@+id/iv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="62px"
            android:background="@drawable/ic_adddevice_wran"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/iv1"
            android:layout_marginTop="10px"
            android:text="警告"
            android:textColor="@color/white"
            android:textSize="50px"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50px"
        android:orientation="vertical"
        android:paddingLeft="50px"
        android:paddingRight="50px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请按以下步骤排查可能的问题并重试"
            android:textColor="@color/theme_text"
            android:textSize="50px"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80px"
            android:text="1.确保您的设备已经按照开始的提示，设置到配网状态;"
            android:textColor="#666666"
            android:textSize="48px"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60px"
            android:text="2.确保之前输入的WIFI账号密码无误;"
            android:textColor="#666666"
            android:textSize="48px"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60px"
            android:text="3.确保设备与家庭路由器的距离不要太远"
            android:textColor="#666666"
            android:textSize="48px"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60px"
            android:text="4.您的路由器是否设置到了5GHZ,可以进入路由器管理设置检查，确保是2.4GHZ;"
            android:textColor="#666666"
            android:textSize="48px"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60px"
            android:text="1.确保您的设备已经按照开始的提示,设置到配网状态"
            android:textColor="#666666"
            android:textSize="48px"/>

        <Button
            android:id="@+id/btn_confirm"
            android:layout_width="match_parent"
            android:layout_height="120px"
            android:layout_marginTop="60px"
            android:background="@drawable/wifi_confirm_shape"
            android:text="重试"
            android:textColor="@color/white"
            android:textSize="46px"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:layout_marginTop="30px"
            android:gravity="center">

            <TextView
                android:id="@+id/btn_feed_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="在线反馈"
                android:textColor="#00C7B2"
                android:textSize="48px"/>

        </LinearLayout>


    </LinearLayout>
</LinearLayout>