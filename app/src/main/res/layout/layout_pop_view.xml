<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_small_white_circle"
    android:orientation="vertical"
    android:paddingBottom="35px"
    android:paddingTop="30px">

    <LinearLayout
        android:id="@+id/ll_add_device"
        android:layout_width="430px"
        android:layout_height="120px"
        android:layout_marginLeft="54px"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="68px"
            android:layout_height="68px"
            android:background="@drawable/ic_add_device"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40px"
            android:text="蓝牙配对"
            android:textColor="#000000"
            android:textSize="46px"/>

    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ll_device_type"
        android:layout_width="430px"
        android:layout_height="120px"
        android:layout_marginLeft="43px"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="86px"
            android:layout_height="86px"
            android:background="@drawable/ic_add_scene"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="38px"
            android:text="设备选型"
            android:textColor="#000000"
            android:textSize="46px"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_wifi_scan"
        android:layout_width="430px"
        android:layout_height="120px"
        android:layout_marginLeft="50px"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="75px"
            android:layout_height="75px"
            android:background="@drawable/ic_qr_code"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45px"
            android:text="WIFI配对"
            android:textColor="#000000"
            android:textSize="46px"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_qr_code"
        android:layout_width="430px"
        android:layout_height="120px"
        android:layout_marginLeft="50px"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="75px"
            android:layout_height="75px"
            android:background="@drawable/ic_qr_code"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45px"
            android:text="扫一扫"
            android:textColor="#000000"
            android:textSize="46px"/>

    </LinearLayout>



</LinearLayout>