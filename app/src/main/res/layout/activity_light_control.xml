<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.wind.control.activity.SceneSettingActivity">

    <include
        android:id="@+id/title"
        layout="@layout/layout_top"></include>

    <RelativeLayout
        android:layout_below="@id/title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FF9CABA7"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40px"
            android:text="开关"
            android:textSize="46px"/>

        <View
            android:id="@+id/line"
            android:layout_below="@id/tv_action"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#e2e2e2"/>

        <RelativeLayout
            android:id="@+id/rl_light_control"
            android:layout_below="@id/line"
            android:layout_width="match_parent"
            android:layout_height="150px"
            android:background="#ffffff">

            <ImageView
                android:id="@+id/iv_device"
                android:layout_width="60px"
                android:layout_height="60px"
                android:background="@drawable/ic_light"
                android:layout_centerVertical="true"
                android:layout_marginLeft="40px"/>

            <TextView
                android:id="@+id/tv_device_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/iv_device"
                android:layout_marginLeft="40px"
                android:textColor="#000000"
                android:textSize="46px"/>

            <TextView
                android:id="@+id/tv_light_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="开"
                android:layout_toLeftOf="@id/iv_add_action"
                android:layout_marginRight="20px"
                android:textSize="46px"
                android:layout_centerVertical="true"
                />

            <ImageView
                android:id="@+id/iv_add_action"
                android:layout_width="50px"
                android:layout_height="50px"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="40px"
                android:background="@drawable/ic_more"/>
        </RelativeLayout>

        <View
            android:layout_below="@id/rl_scene_device"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#e2e2e2"/>
    </RelativeLayout>
</RelativeLayout>
