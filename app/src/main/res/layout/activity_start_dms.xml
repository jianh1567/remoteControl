<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/iv"
        android:layout_width="match_parent"
        android:layout_height="1150px"
        android:background="@drawable/view_adddevice_configprocess_bg"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35px"
        android:background="@drawable/wifi_shape"
        android:paddingBottom="20px"
        android:paddingLeft="55px"
        android:paddingRight="55px"
        android:paddingTop="20px"
        android:text="设备添加中"
        android:textColor="@color/white"
        android:textSize="46px"/>

    <LinearLayout
        android:id="@+id/ll_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45px"
        android:layout_marginTop="30px"
        android:background="@drawable/wifi_circle_shape"
        android:gravity="center">

        <ImageView
            android:layout_width="60px"
            android:layout_height="50px"
            android:background="@drawable/guide_devices_back_arrow"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv"
        android:layout_marginLeft="80px"
        android:layout_marginRight="80px"
        android:layout_marginTop="80px"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80px"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <View
                android:layout_width="15px"
                android:layout_height="15px"
                android:background="@drawable/shape_circle_blue"/>

            <TextView
                android:id="@+id/tv_start_dms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:text="设备正在配网中"
                android:textColor="#00C7B2"
                android:textSize="42px"/>

            <ProgressBar
                android:id="@+id/progressBar1"
                android:layout_width="65px"
                android:layout_height="65px"
                android:layout_marginLeft="20px"
                android:indeterminateBehavior="repeat"
                android:indeterminateDrawable="@drawable/dialog_loading"
                android:indeterminateOnly="true"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80px"
            android:layout_marginTop="30px"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <View
                android:layout_width="15px"
                android:layout_height="15px"
                android:background="@drawable/shape_circle_blue"/>

            <TextView
                android:id="@+id/tv_device_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:text="设备注册到云端"
                android:textColor="#00C7B2"
                android:textSize="42px"/>

            <ProgressBar
                android:id="@+id/progressBar2"
                android:layout_width="65px"
                android:layout_height="65px"
                android:layout_marginLeft="20px"
                android:indeterminateBehavior="repeat"
                android:indeterminateDrawable="@drawable/dialog_loading"
                android:indeterminateOnly="true"
                android:visibility="gone"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80px"
            android:layout_marginTop="30px"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <View
                android:layout_width="15px"
                android:layout_height="15px"
                android:background="@drawable/shape_circle_blue"/>

            <TextView
                android:id="@+id/tv_add_device"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:text="设备添加"
                android:textColor="#00C7B2"
                android:textSize="42px"/>

        </LinearLayout>

        <Button
            android:id="@+id/btn_scan"
            android:layout_width="match_parent"
            android:layout_height="120px"
            android:layout_marginTop="30px"
            android:background="@drawable/wifi_confirm_shape"
            android:text="重新扫描"
            android:textColor="@color/white"
            android:textSize="46px"
            android:visibility="gone"/>

    </LinearLayout>

</RelativeLayout>