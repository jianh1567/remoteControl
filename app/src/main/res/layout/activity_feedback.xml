<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/theme_bg"
              android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_title_content"
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:background="@color/white">

        <ImageView
            android:id="@+id/iv_left"
            android:layout_width="150px"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:adjustViewBounds="true"
            android:padding="40px"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_left"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/tv_title_center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:text="意见与反馈"
            android:textColor="@color/theme_text"
            android:textSize="52px"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/tv_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="30px"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:text="提交"
            android:textColor="@color/theme_text"
            android:textSize="52px"
            android:visibility="visible"/>

    </RelativeLayout>
    <com.wind.control.view.ReboundScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:descendantFocusability="blocksDescendants">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="96px"
                android:layout_marginTop="20px"
                android:gravity="center_vertical">

                <View
                    android:layout_width="12px"
                    android:layout_height="36px"
                    android:layout_marginLeft="30px"
                    android:background="#FECB03"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="15px"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:text="@string/title"
                    android:textColor="@color/theme_text"
                    android:textSize="39px"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="15px"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:text="*"
                    android:textColor="@color/theme_error"
                    android:textSize="39px"/>
            </LinearLayout>


            <EditText
                android:id="@+id/et_feedback_tittle"
                android:layout_width="match_parent"
                android:layout_height="138px"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:hint="@string/hint_please_input_feedback_title"
                android:maxLength="20"
                android:maxLines="1"
                android:paddingLeft="30px"
                android:paddingRight="30px"
                android:textColor="@color/theme_text"
                android:textColorHint="@color/theme_edit_hint"
                android:textSize="42px"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="96px"
                android:layout_marginTop="20px"
                android:gravity="center_vertical">

                <View
                    android:layout_width="12px"
                    android:layout_height="36px"
                    android:layout_marginLeft="30px"
                    android:background="#FECB03"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="15px"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:text="@string/question_description"
                    android:textColor="@color/theme_text"
                    android:textSize="39px"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="15px"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:text="*"
                    android:textColor="@color/theme_error"
                    android:textSize="39px"/>
            </LinearLayout>

            <EditText
                android:id="@+id/et_feedback_desc"
                android:layout_width="match_parent"
                android:layout_height="345px"
                android:background="@color/white"
                android:gravity="top"
                android:hint="@string/hint_please_input_feedback_content"
                android:includeFontPadding="false"
                android:maxLength="300"
                android:paddingBottom="14px"
                android:paddingLeft="30px"
                android:paddingRight="30px"
                android:paddingTop="39px"
                android:textColor="@color/theme_text"
                android:textColorHint="@color/theme_edit_hint"
                android:textSize="42px"/>

            <TextView
                android:id="@+id/tv_surplus"
                android:layout_width="match_parent"
                android:layout_height="75px"
                android:background="@color/white"
                android:gravity="right"
                android:includeFontPadding="false"
                android:paddingRight="30px"
                android:text="300/300"
                android:textColor="@color/theme_text_nor"
                android:textSize="39px"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="96px"
                android:layout_marginTop="20px"
                android:gravity="center_vertical">

                <View
                    android:layout_width="12px"
                    android:layout_height="36px"
                    android:layout_marginLeft="30px"
                    android:background="#FECB03"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="15px"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:text="@string/upload_photos_no_more_than_six"
                    android:textColor="@color/theme_text"
                    android:textSize="39px"/>
            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_photos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="96px"
                android:layout_marginTop="20px"
                android:gravity="center_vertical">

                <View
                    android:layout_width="12px"
                    android:layout_height="36px"
                    android:layout_marginLeft="30px"
                    android:background="#FECB03"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="15px"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:text="@string/contact_way"
                    android:textColor="@color/theme_text"
                    android:textSize="39px"/>
            </LinearLayout>

            <EditText
                android:id="@+id/et_feedback_phone_num"
                android:layout_width="match_parent"
                android:layout_height="138px"
                android:layout_marginBottom="50px"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:hint="@string/hint_please_input_your_phone_num"
                android:inputType="phone"
                android:maxLines="1"
                android:paddingLeft="30px"
                android:paddingRight="30px"
                android:textColor="@color/theme_text"
                android:textColorHint="@color/theme_edit_hint"
                android:textSize="42px"/>
        </LinearLayout>
    </com.wind.control.view.ReboundScrollView>
</LinearLayout>